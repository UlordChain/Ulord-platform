<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <RollingFile name="MyFile" fileName="/data/logs/upaas-ucwallet-sdk/upaas-ucwallet-sdk.log"
                     filePattern="/data/logs/upaas-ucwallet-sdk/upaas-ucwallet-sdk-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />  
            <Policies>  
		        <TimeBasedTriggeringPolicy modulate="true" interval="1"/>  
		    </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="/data/logs/upaas-ucwallet-sdk" maxDepth="1">
                     <IfFileName glob="upaas-eureka-sdk-*.log" />
                     <IfLastModified age="30d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>  
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="MyFile" />
        </Root>
        <logger level="warn" name="com.netflix">
        	<AppenderRef ref="Console" />
            <AppenderRef ref="MyFile" />
        </logger>
        <logger level="warn" name="org.apache">
        	<AppenderRef ref="Console" />
            <AppenderRef ref="MyFile" />
        </logger>
        <logger level="warn" name="org.springframework">
        	<AppenderRef ref="Console" />
            <AppenderRef ref="MyFile" />
        </logger>
        <logger level="warn" name="org.thymeleaf">
            <AppenderRef ref="Console" />
            <AppenderRef ref="MyFile" />
        </logger>
    </Loggers>
</Configuration>
